Algoritmo "Positivo_ou_Negativo"
Var
   valor: real
Inicio
   // Solicita ao usuário que insira um valor
   escreva("Digite um valor: ")
   leia(valor)

   // Verifica se o valor é positivo ou negativo
   se (valor >= 0) entao
      escreval("O valor é positivo.")
   senao
      escreval("O valor é negativo.")
   fimse

Fimalgoritmo